/* Message codes */

#define BBS_CHUNK             0x41000

#define BBS_TASKID            BBS_CHUNK+0
#define BBS_USERID            BBS_CHUNK+1
#define BBS_DROPUSER          BBS_CHUNK+2
#define BBS_ICONINFO          BBS_CHUNK+3
#define BBS_COUNTONLINE       BBS_CHUNK+4
#define BBS_COUNTOTHER        BBS_CHUNK+5
#define BBS_PUTLOG            BBS_CHUNK+11
#define BBS_USERLIST          BBS_CHUNK+16
#define BBS_STATUS            BBS_CHUNK+17
#define BBS_XMODEM            BBS_CHUNK+18
#define BBS_ZMODEM            BBS_CHUNK+18
#define BBS_CHATREQUEST       BBS_CHUNK+21
#define BBS_CHATDATA          BBS_CHUNK+22
#define BBS_USERTASK          BBS_CHUNK+23
#define BBS_MUCONTROL         BBS_CHUNK+24
#define BBS_MUDATA            BBS_CHUNK+25
#define BBS_SNOOP             BBS_CHUNK+26
#define BBS_FILENUMBER        BBS_CHUNK+27
#define BBS_TIME              BBS_CHUNK+28
#define BBS_RATIO             BBS_CHUNK+29
#define BBS_MESSAGE           BBS_CHUNK+30
#define BBS_FORCECHAT         BBS_CHUNK+31
#define BBS_ALERT             BBS_CHUNK+32
#define BBS_DIVERT            BBS_CHUNK+33
#define BBS_FILECOUNTS        BBS_CHUNK+34
#define BBS_READFILENUMBER    BBS_CHUNK+36
#define BBS_SERVERIS          BBS_CHUNK+37
#define BBS_SYSOPMAIL         BBS_CHUNK+38
#define BBS_READUSER          BBS_CHUNK+39

#define BBS_ARCID             BBS_CHUNK+60
#define BBS_ARC               BBS_CHUNK+61
#define BBS_QUIT              BBS_CHUNK+62

/* Paging codes */
#define NO_CHATTING           1
#define PAGING                2
#define ALREADY_CHATTING      3
#define EXCUSE                4
#define ACCEPT                5

/* MU chat codes */
#define MU_JOIN               1
#define MU_LEAVE              2
#define MU_PUBLIC             1
#define MU_PRIVATE            2

/* Data codes */
#define DONE                  1
#define TIMEOUT               2
#define FILE_ERROR            3
#define DISK_FULL             4
#define ERRORS                5
#define CANCEL                6
#define CARRIER               7
